@{
    ViewBag.Title = "列表页面数据条数显示设置";
    Layout = null;
}
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<link href="~/Content/bootstrap-responsive.min.css" rel="stylesheet" />
<script type="text/javascript" src="/Scripts/DatePicker/WdatePicker.js"></script>
<script src="~/Scripts/jquery-2.0.2.min.js"></script>
<script src="~/Scripts/artDialog/artDialog.source.js?skin=green"></script>
<script src="~/Scripts/artDialog/plugins/iframeTools.js"></script>
<!-- END PAGE LEVEL SCRIPTS -->

<script type="text/javascript">

    function SetPageSize()
    {
        var json = $("#batchForm").serialize();
        $.post('/Home/SetPageSize',json,function (result) {
            if (result.success) {
                art.dialog({
                    icon: 'succeed',
                    content: '操作成功！',
                    ok: function () {
                        //关闭窗口
                        art.dialog.close();
                    }
                });

            } else {
                art.dialog.alert(result.message)
                art.dialog.close();
            }
        });
    }
</script>
<form id="batchForm">
    <div class="form-group">
        <label>
            <strong color:red;">每页显示条数:</strong>
        </label>
        @Html.TextBox("PageSize", ViewBag.pageSize as string, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <button type="button" class="btn btn-success" onclick="SetPageSize();">
            确定
        </button>
    </div>
</form>


