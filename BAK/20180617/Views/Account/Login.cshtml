@model CRM.Repository.User

@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>CRM云平台-登陆</title>

    <!-- BEGIN GLOBAL MANDATORY STYLES -->
    <link href="http://metronic.kp7.cn/assets/global/fonts/2.css" rel="stylesheet" type="text/css" />
    <link href="http://metronic.kp7.cn/assets/global/plugins/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css" />
    <link href="http://metronic.kp7.cn/assets/global/plugins/simple-line-icons/simple-line-icons.min.css" rel="stylesheet" type="text/css" />
    <link href="http://metronic.kp7.cn/assets/global/plugins/bootstrap/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="http://metronic.kp7.cn/assets/global/plugins/uniform/css/uniform.default.css" rel="stylesheet" type="text/css" />
    <link href="http://metronic.kp7.cn/assets/global/plugins/bootstrap-switch/css/bootstrap-switch.min.css" rel="stylesheet" type="text/css" />
    <!-- END GLOBAL MANDATORY STYLES -->
    <!-- BEGIN PAGE LEVEL STYLES -->
    <link href="http://metronic.kp7.cn/assets/global/plugins/select2/select2.css" rel="stylesheet" type="text/css" />
    <link href="http://metronic.kp7.cn/assets/admin/pages/css/login.css" rel="stylesheet" type="text/css" />
    <!-- END PAGE LEVEL SCRIPTS -->
    <!-- BEGIN THEME STYLES -->
    <link href="http://metronic.kp7.cn/assets/global/css/components.css" rel="stylesheet" type="text/css" />
    <link href="http://metronic.kp7.cn/assets/global/css/plugins.css" rel="stylesheet" type="text/css" />
    <link href="http://metronic.kp7.cn/assets/admin/layout/css/layout.css" rel="stylesheet" type="text/css" />
    <link id="style_color" href="http://metronic.kp7.cn/assets/admin/layout/css/themes/default.css" rel="stylesheet" type="text/css" />
    <link href="http://metronic.kp7.cn/assets/admin/layout/css/custom.css" rel="stylesheet" type="text/css" />
    <!-- END THEME STYLES -->

</head>
<body class="login">
    <!-- BEGIN LOGO -->
    <div class="logo">
        <a href="#">
            <img src="http://metronic.kp7.cn/assets/admin/layout/img/logo-big.png" alt="" />
        </a>
    </div>
    <!-- END LOGO -->
    <!-- BEGIN SIDEBAR TOGGLER BUTTON -->
    <div class="menu-toggler sidebar-toggler">
    </div>
    <!-- END SIDEBAR TOGGLER BUTTON -->
    <!-- BEGIN LOGIN -->
    <div class="content">
        <!-- BEGIN LOGIN FORM -->
        @using (Html.BeginForm("Validate", "Account", FormMethod.Post))
        {
            <h3 class="form-title">输入你的帐号信息进行登录</h3>
            <div class="alert alert-danger display-hide">
                <button class="close" data-close="alert"></button>
                <span>
                    Enter any username and password.
                </span>
            </div>
            <div class="form-group">
                <!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
                <label class="control-label visible-ie8 visible-ie9">Username</label>
                <div class="input-icon">
                    <i class="fa fa-user"></i>
                    @Html.TextBox("USERNAME", "", new { @class = "form-control placeholder-no-fix", placeholder = "用户名" })
                </div>
            </div>
            <div class="form-group">
                <label class="control-label visible-ie8 visible-ie9">Password</label>
                <div class="input-icon">
                    <i class="fa fa-lock"></i>
                    @Html.Password("PASSWORD", "", new { @class = "form-control placeholder-no-fix", placeholder = "密码" })
                </div>
            </div>
            <div class="form-actions">
                @*<label class="checkbox">
                        <input type="checkbox" name="remember" value="1" /> Remember me
                    </label>*@
                <button type="submit" class="btn green pull-right">
                    登录 <i class="m-icon-swapright m-icon-white"></i>
                </button>
            </div>
        }
        <!-- END LOGIN FORM -->

    </div>
    <!-- END LOGIN -->
    <!-- BEGIN COPYRIGHT -->
    <div class="copyright">
        2015 &copy; CRM云平台.
    </div>
    <!-- END COPYRIGHT -->

</body>

</html>
